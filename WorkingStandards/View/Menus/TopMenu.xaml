<!--Верхнее меню главного окна приложения-->
<UserControl x:Class="WorkingStandards.View.Menus.TopMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             mc:Ignorable="d" >
    <DockPanel VerticalAlignment="Center">
        <Menu Name="WindowMenu" DockPanel.Dock="Top" >
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Foreground" Value="{StaticResource {x:Static SystemColors.MenuTextBrushKey}}" />
                </Style>
            </Menu.Resources>

            <MenuItem Header="_Меню" Cursor="Hand" Margin="2" >
                <MenuItem Cursor="Hand" Header="_Пользовательские настройки" Click="ConfigMenuItem_OnClick"/>
                <MenuItem Cursor="Hand" Header="_Выход" Click="ExitMenuItem_OnClick"/>
            </MenuItem>
            <MenuItem Name="UpdateMenuItem" Header="_Обновление" Cursor="Hand" Margin="2" >
                <MenuItem Cursor="Hand" Header="_Детали для расчета" Click="UpdateDetailsForCalculationMenuItem_OnClick"/>
                <MenuItem Cursor="Hand" Header="_Детали для печати" Click="UpdateDetailsForPrintMenuItem_OnClick"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</UserControl>

